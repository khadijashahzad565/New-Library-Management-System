<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Data</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container my-5 shadow-lg p-4 rounded">
        <!-- Header Section -->
        <header class="d-flex flex-md-row justify-content-between align-items-start align-items-md-center mb-4">
            <h1 class="h3 mb-3 mb-md-0">Book Data</h1>
            <div class="d-flex flex-column flex-md-row gap-2"> <!-- Added flex-column for mobile screens -->
                <a href="/dashboard" class="btn btn-dark mb-2 mb-md-0">Add Book</a>
                <a href="/logout" class="btn btn-dark">Logout</a>
            </div>
        </header>
        
        
        <!-- Error Message -->
        <div class="alert alert-danger d-none" id="error-message" role="alert"></div>

        <!-- Book Table (Responsive) -->
        <div class="table-responsive">
            <table class="table table-striped table-hover shadow-sm" id="book-table">
                <thead class="table-dark">
                    <tr>
                        <th>Book Name</th>
                        <th>ISBN</th>
                        <th>Genre</th>
                        <th>Author</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Dynamic rows will be added here -->
                </tbody>
            </table>
        </div>
    </div>

<script type="module" src="data.js"></script>
   

   
   
</body>
</html>
